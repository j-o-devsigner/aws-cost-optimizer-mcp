  "bugs": {
    "url": "https://github.com/j-o-devsigner/aws-cost-optimizer-mcp/issues"
  },
  "homepage": "https://github.com/j-o-devsigner/aws-cost-optimizer-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@aws-sdk/client-cloudwatch": "^3.675.0",
    "@aws-sdk/client-compute-optimizer": "^3.675.0",
